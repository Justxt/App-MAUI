<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:App.Pages"
             x:Class="App.Pages.Flex"
             Title="Flex">

    <FlexLayout JustifyContent="Center">

        <FlexLayout AlignItems="Start">
            <Image Source="dotnet_bot.png" WidthRequest="150" HeightRequest="150">
                <Image.GestureRecognizers>
                    <TapGestureRecognizer Tapped="OnClickImg" />
                </Image.GestureRecognizers>
            </Image>

            <Label Text="Flex"/>
            </FlexLayout>

            <FlexLayout AlignItems="Center">
            <Image Source="dotnet_bot.png" WidthRequest="150" HeightRequest="150">
                <Image.GestureRecognizers>
                    <TapGestureRecognizer Tapped="OnClickImg" />
                </Image.GestureRecognizers>
            </Image>

            <Label Text="Lay"/>
            </FlexLayout>

            <FlexLayout AlignItems="End">
            <Image Source="dotnet_bot.png" WidthRequest="150" HeightRequest="150">
                <Image.GestureRecognizers>
                    <TapGestureRecognizer Tapped="OnClickImg" />
                </Image.GestureRecognizers>
            </Image>

            <Label Text="Out"/>
            </FlexLayout>

        </FlexLayout>


</ContentPage>